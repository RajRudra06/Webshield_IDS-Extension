{
  "manifest_version": 3,
  "name": "WebShield IDS",
  "version": "1.0.0",
  "description": "Real-time browser intrusion detection and phishing protection powered by machine learning.",

  "omnibox": { "keyword": "ws" },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },

  "permissions": [
    "storage",
    "downloads",
    "notifications",
    "tabs",
    "webRequest"
    ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js",
    "type":"module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scraper.js"],
      "run_at": "document_start"
    }
    
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png"
    }
  },

  "icons": {
    "16": "icons/icon.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "pages/blocked.html",
        "pre_database/threat-database.json",
        "mlSystems/ort.min.js",
        "mlSystems/ort-wasm.wasm",
        "mlSystems/ort-wasm-simd.wasm",
        "mlSystems/ort-wasm-threaded.wasm",
        "mlSystems/lightGBMClassifier.onnx"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}